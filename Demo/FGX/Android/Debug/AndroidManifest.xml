<?xml version="1.0" encoding="utf-8"?>
<!-- BEGIN_INCLUDE(manifest) -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="ru.fgx.ViewNavDemoFGX"
        android:versionCode="1"
        android:versionName="1.0.0"
        android:installLocation="auto">
    
    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="25" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- Внимание! Не удаляйте разрешение на интернет. Оно необходимо для нормальной работы отладчика! -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application android:persistent="False" 
        android:restoreAnyVersion="False" 
        android:label="ViewNavDemoFGX" 
        android:debuggable="True" 
        android:largeHeap="False"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <activity android:name="com.embarcadero.firemonkey.FMXNativeActivity"
                  android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
                  android:windowSoftInputMode="stateUnspecified">
            <meta-data android:name="android.app.lib_name" android:value="ViewNavDemoFGX" />
            <intent-filter>  
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
        </activity>
    </application>
</manifest>
<!-- END_INCLUDE(manifest) -->
